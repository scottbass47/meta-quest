<InputProfile>
    <context type="keyboard">
        <actions>
       	 	<!-- Movement Controls -->
	        <action name="MOVE_UP"><key code="Up"/></action>
	        <action name="MOVE_DOWN"><key code="Down"/></action>
	        <action name="MOVE_RIGHT"><key code="Right"/></action>
	        <action name="MOVE_LEFT"><key code="Left"/></action>
	        <action name="JUMP"><key code="Space"/></action>
	            
	        <!-- Action Controls -->
	        <action name="ATTACK"><key code="F"/></action>
	        <action name="ABILITY_1"><key code="X"/></action>
	        <action name="ABILITY_2"><key code="C"/></action>
	        <action name="ABILITY_3"><key code="V"/></action>
	            
	        <!-- Menu Controls -->
	        <action name="SELECT"><key code="Enter"/></action>
	        <action name="PAUSE"><key code="Escape"/></action>
       	 	
    	</actions>
    </context>
	<context type="xbox_one">
	    <actions>
	        <!-- Movement Controls -->
	        <action name="MOVE_UP"><axis num="1" dir="neg"/></action>
	        <action name="MOVE_DOWN"><axis num="1" dir="pos"/></action>
	        <action name="MOVE_RIGHT"><axis num="0" dir="pos"/></action>
	        <action name="MOVE_LEFT"><axis num="0" dir="neg"/></action>
	        <action name="JUMP"><button name="A"/></action>
	            
	        <!-- Action Controls -->
	        <action name="ATTACK"><button name="X"/></action>
	        <action name="ABILITY_1"><button name="B"/></action>
	        <action name="ABILITY_2"><button name="Y"/></action>
	        <action name="ABILITY_3"><button name="RIGHT_BUMPER"/></action>
	            
	        <!-- Menu Controls -->
	        <action name="SELECT"><button name="LEFT_BUMPER"/></action>
	        <action name="PAUSE"><button name="START"/></action>
	    </actions>
	</context>
</InputProfile>